/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 0;
  box-sizing: border-box;
} 
.flex-wrp{
    display: block;
}
.flex-item{
    display: inline-block;
    width: 25%;
    margin-top: 10px;
}
.col-6{
    display: inline-block;
    width: 24.8%;
    padding-top: 10px;
}
.col-8{
    display: inline-block;
    width: 33%;
   padding-top: 10px;
}
.pull-left{
  float: left;
}
.pull-right{
  float: right;
}
.border-right{
    border-right: 1px solid #eee;
}
.border-bottom{
    border-bottom: 1px solid #eee;
}
.course-item{
  padding: 10px;
  display: flex;
}
.course-image{
  width: 135px;
}
.course-image image{
  width: 100%;
  height: 88px;
}
.course-info{
  padding-left: 10px;
  flex: 1;
}
.course-info view{
  margin-bottom: 10px;
}
.course-info .label{
   font-size: 13px;
  margin-right: 5px;
  color: #666;
}
.course-info .price{
  font-size: 13px;
  color: #f60;
}
.course-title{
 font-size: 14px;
 margin-right: 10px;
}
.icon-personal-little{
   width: 16px;
  height: 16px;
}
.person{
  margin-right: 5px;
}
.divider{
    width: 100%;
    height: 20px;
    background-color: #efefef;
    margin-top: 10px;
}
.gridden-bg{
  position: absolute;
  width: 100%;
  height: 100%;
  text-align: center;
  background: -webkit-linear-gradient(#00b7ee,#5f44fc);
  background: -moz-linear-gradient(#00b7ee,#5f44fc);
  background: linear-gradient(#00b7ee,#5f44fc);
}
.button-custom{
    height: 40px;
    border-radius: 5px;
    margin-right:20px;
    margin-left: 20px;
    margin-top: 30px;
    font-size: 16px;
    color: #fff;
    background:#00b7ee; 
}
.page-loading{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-size: 14px;
  color: #666;
}
.page-loading .loading-text{
  display: inline-block;
  vertical-align: middle;
}
.weui-loading {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.load-more-wrap{
  text-align: center;
  padding: 10px 20px 20px 20px;
}
.load-content{
  padding: 5px;
  color: #666;
}
.btn-load-more text{
  display: block;
  padding: 5px;
  border-radius: 3px;
  background: #e6e6e6;
  color: #666;
  text-align: center;
}
